<resources>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rectangle</item>
    </style>

    <style name="SwitchCompatTheme" parent="Theme.AppCompat">
        <item name="colorAccent">?active_color</item>
        <item name="android:colorForeground">?track_switch_color</item>
        <item name="colorSwitchThumbNormal">?thumb_switch_color</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/Regular16Primary</item>
        <item name="tabSelectedTextColor">?colorAccent</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="ActiveColorControlHighLight">
        <item name="android:colorControlHighlight">?active_color_20</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:windowBackground">@drawable/dialog_rectangle</item>
        <item name="android:textColorPrimary">?text_primary_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorSecondary">?text_secondary_color</item>
        <item name="android:colorAccent">?colorAccent</item>
        <item name="android:colorControlHighlight">?active_color_40</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@null</item>
        <item name="android:headerMonthTextAppearance">@style/DatePickerTextAppearance</item>
    </style>

    <style name="DatePickerTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@drawable/date_picker_state_list</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/Regular14White</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/button_active</item>
    </style>

    <style name="BlueTextButtonStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/Regular16Accent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/blue_ripple</item>
    </style>

    <style name="Medium14Accent" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?active_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Medium16Accent" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?active_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogAlertButtonStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/Regular14Accent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/blue_ripple</item>
    </style>

    <style name="Regular20Primary" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?text_primary_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Regular16Accent" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?active_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Regular14Accent" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?active_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular12Accent" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?active_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Regular18Primary" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?default_87</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Medium14White" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular14White" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Medium14Primary" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?default_87</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular16Secondary" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?text_secondary_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Regular14Primary" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?text_primary_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular14Secondary" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?text_secondary_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular12Secondary" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?text_secondary_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Regular16Primary" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?text_primary_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Medium16Primary" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?text_primary_color</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
