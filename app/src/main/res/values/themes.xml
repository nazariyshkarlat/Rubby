        <item name="colorPrimary">@color/gray_75</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorControlHighlight">@color/dark_12</item>
        <item name="android:textColorPrimary">@color/dark_87</item>
        <item name="android:textColorSecondary">@color/dark_60</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="page_background_color">@color/white</item>
        <item name="dialog_color">@color/white</item>
        <item name="divider_color">@color/dark_12</item>
        <item name="default_87">@color/dark_87</item>
        <item name="thumb_switch_color">@color/gray_db</item>
        <item name="track_switch_color">@color/gray_bd</item>
        <item name="default_60">@color/dark_60</item>
        <item name="default_12">@color/dark_12</item>
