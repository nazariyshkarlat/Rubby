<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/searchBarConstraintLayout">

    <EditText
        android:id="@+id/searchBarEditText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/dialog_rectangle"
        android:elevation="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:translationZ="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchBarArrowBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:translationZ="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/searchBarEditText"
        app:layout_constraintStart_toStartOf="@+id/searchBarEditText"
        app:layout_constraintTop_toTopOf="@+id/searchBarEditText"
        app:srcCompat="@drawable/ic_outline_arrow_back_87_24dp" />

    <ImageView
        android:id="@+id/searchBarCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:translationZ="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/searchBarEditText"
        app:layout_constraintEnd_toEndOf="@+id/searchBarEditText"
        app:layout_constraintTop_toTopOf="@+id/searchBarEditText"
        app:srcCompat="@drawable/ic_outline_close_87_24dp" />

</android.support.constraint.ConstraintLayout>